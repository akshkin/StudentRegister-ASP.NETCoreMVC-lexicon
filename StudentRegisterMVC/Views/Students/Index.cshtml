@using StudentRegisterMVC.Helpers
@model StudentIndexViewModel

@{
    ViewData["Title"] = "All students";
}

<h1>All students</h1>

<p>
    <a asp-action="Create">Add a new student</a>
</p>

<form asp-action="Index" method="get">
    <input type="search" asp-for="QueryOptions.SearchQuery" placeholder="Search by last name"/>

    <select asp-for="QueryOptions.SortBy" asp-items="Html.GetEnumSelectList<SortByOptions>()"></select>

    <input type="submit" value="Sort" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
               Email Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
           
@foreach (var item in Model.Students) {
            <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.StudentId">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a class="link-danger" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (!string.IsNullOrEmpty(Model.QueryOptions.SearchQuery))
{
    <a asp-action="Index">Show all students</a>    
}
